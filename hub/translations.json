{
    "share":{
        "POLL" : {
            "hub_only" : true,
            "baseURL":"http://localhost:8000/api/share/%endpoint%/%school_id?=%",
            "endpoint":{
                "everyone":{},
                "school":{
                    "parameters":[
                        {
                            "name":"school_id",
                            "type":"string"
                        }
                    ],
                    "returns":[
                        {
                            "type":"int",
                            "name":"timestamp"
                        },
                        {
                            "type":["string","int","float"],
                            "name":"value"
                        }
                    ]
                }
            }
        },
        "POST" : {
            "apiPrefix":"set",
            "baseURL":"http://localhost:8000/api/share/",
            "microbitQueryString":"/%endpoint%/%id?%",
            "queryObject":{
                "variable_name":"%variable_name%",
                "value":"%value%"
            },
            "endpoint":{
                "everyone":{
                    "parameters":[
                        {
                            "name":"name_hash",
                            "type":"uint16_t"
                        },
                        {
                            "name":"value",
                            "type":["string","int","float"]
                        }
                    ]
                },
                "school":{
                    "parameters":[
                        {
                            "name":"name_hash",
                            "type":"uint16_t"
                        },
                        {
                            "name":"value",
                            "type":["string","int","float"]
                        }
                    ]
                }
            }
        }
    }
}